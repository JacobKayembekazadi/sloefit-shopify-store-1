{
  "sections": {
    "main": {
      "type": "main-product",
      "blocks": {
        "title": {
          "type": "title",
          "settings": {
            "show_vendor": true,
            "show_ratings": true,
            "rating": 5,
            "rating_count": "127"
          }
        },
        "price": {
          "type": "price",
          "settings": {
            "show_tax_text": false,
            "show_subscription_info": true,
            "subscription_label": "Subscribe & Save",
            "subscription_text": "Save 10% with a subscription"
          }
        },
        "variant_picker": {
          "type": "variant_picker",
          "settings": {
            "variant_style": "dropdown",
            "show_color_swatches": true
          }
        },
        "quantity_selector": {
          "type": "quantity_selector",
          "settings": {}
        },
        "buy_buttons": {
          "type": "buy_buttons",
          "settings": {
            "show_dynamic_checkout": true,
            "show_stock_message": true,
            "low_stock_threshold": 10,
            "in_stock_text": "Ready to ship"
          }
        },
        "trust_badges": {
          "type": "trust_badges",
          "settings": {
            "show_trust_badges": true,
            "trust_badge_1_text": "Free shipping",
            "trust_badge_2_text": "30-day returns",
            "trust_badge_3_text": "Secure checkout"
          }
        },
        "description": {
          "type": "description",
          "settings": {
            "show_description": true,
            "description_length": 200,
            "show_read_more": false
          }
        },
        "ingredients_tab": {
          "type": "collapsible_tab",
          "settings": {
            "tab_title": "Ingredients",
            "tab_content": "<p>View all ingredients and nutritional information for this product.</p>"
          }
        },
        "brewing_tab": {
          "type": "collapsible_tab",
          "settings": {
            "tab_title": "Brewing Instructions",
            "tab_content": "<p>Detailed brewing and preparation instructions.</p>"
          }
        },
        "share_buttons": {
          "type": "share_buttons",
          "settings": {
            "show_share_buttons": true,
            "share_label": "Share",
            "show_facebook": true,
            "show_twitter": true,
            "show_pinterest": true,
            "show_copy_link": true
          }
        }
      },
      "block_order": [
        "title",
        "price",
        "variant_picker",
        "quantity_selector",
        "buy_buttons",
        "trust_badges",
        "description",
        "ingredients_tab",
        "brewing_tab",
        "share_buttons"
      ],
      "settings": {
        "enable_video_support": true,
        "thumbnail_count": 8,
        "enable_image_zoom": true,
        "badge_position": "top-left",
        "enable_bestseller_badge": true,
        "enable_new_badge": true,
        "enable_sale_badge": true,
        "show_full_description": true,
        "low_stock_threshold": 10,
        "in_stock_text": "Ready to ship"
      }
    },
    "recommendations": {
      "type": "product-recommendations",
      "settings": {
        "heading": "You may also like",
        "products_to_show": 4
      }
    },
    "product_rich_text": {
      "type": "product-rich-text",
      "settings": {
        "enable_section": false
      }
    }
  },
  "order": [
    "main",
    "recommendations",
    "product_rich_text"
  ]
}


