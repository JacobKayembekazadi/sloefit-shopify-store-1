[
  {
    "name": "theme_info",
    "theme_name": "Sloe Fit",
    "theme_version": "1.0.0",
    "theme_author": "Sloe Fit",
    "theme_documentation_url": "https://help.shopify.com/manual/online-store/themes",
    "theme_support_url": "https://support.shopify.com/"
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Fonts"
      },
      {
        "type": "font_picker",
        "id": "type_body_font",
        "default": "assistant_n4",
        "label": "Body font"
      },
      {
        "type": "font_picker",
        "id": "type_header_font",
        "default": "assistant_n4",
        "label": "Heading font"
      }
    ]
  },
  {
    "name": "Layout",
    "settings": [
      {
        "type": "select",
        "id": "max_page_width",
        "label": "Page width",
        "options": [
          {
            "value": "90rem",
            "label": "Narrow"
          },
          {
            "value": "110rem",
            "label": "Wide"
          }
        ],
        "default": "90rem"
      },
      {
        "type": "range",
        "id": "min_page_margin",
        "min": 10,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Page margin",
        "default": 20
      }
    ]
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "header",
        "content": "Base Colors"
      },
      {
        "type": "color",
        "id": "background_color",
        "default": "#FFFFFF",
        "label": "Background color"
      },
      {
        "type": "color",
        "id": "foreground_color",
        "default": "#1A1A1A",
        "label": "Text color"
      },
      {
        "type": "color",
        "id": "primary_color",
        "default": "#22C55E",
        "label": "Primary color"
      },
      {
        "type": "color",
        "id": "primary_foreground_color",
        "default": "#FFFFFF",
        "label": "Primary text color"
      },
      {
        "type": "header",
        "content": "Header & Footer"
      },
      {
        "type": "checkbox",
        "id": "show_announcement_bar",
        "label": "Show announcement bar",
        "default": true
      },
      {
        "type": "color",
        "id": "header_background_color",
        "default": "#FFFFFF",
        "label": "Header background color"
      },
      {
        "type": "color",
        "id": "footer_background_color",
        "default": "#F9FAFB",
        "label": "Footer background color"
      }
    ]
  },
  {
    "name": "Product Page",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_product_image_gallery",
        "label": "Show image gallery with thumbnails",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_wishlist_button",
        "label": "Show wishlist button",
        "default": true
      },
      {
        "type": "select",
        "id": "product_image_zoom",
        "label": "Image zoom behavior",
        "options": [
          {
            "value": "none",
            "label": "None"
          },
          {
            "value": "hover",
            "label": "Hover zoom"
          },
          {
            "value": "click",
            "label": "Click to zoom"
          }
        ],
        "default": "hover"
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_cart_drawer",
        "label": "Enable cart drawer",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "enable_ajax_cart",
        "label": "Enable AJAX cart updates",
        "default": true
      },
      {
        "type": "select",
        "id": "cart_drawer_position",
        "label": "Cart drawer position",
        "options": [
          {
            "value": "right",
            "label": "Right"
          },
          {
            "value": "left",
            "label": "Left"
          }
        ],
        "default": "right"
      }
    ]
  },
  {
    "name": "Search",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_search_modal",
        "label": "Enable search modal",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "enable_predictive_search",
        "label": "Enable predictive search",
        "default": true
      }
    ]
  },
  {
    "name": "Social Media",
    "settings": [
      {
        "type": "header",
        "content": "Social Links"
      },
      {
        "type": "url",
        "id": "social_instagram_url",
        "label": "Instagram URL"
      },
      {
        "type": "url",
        "id": "social_youtube_url",
        "label": "YouTube URL"
      },
      {
        "type": "url",
        "id": "social_facebook_url",
        "label": "Facebook URL"
      },
      {
        "type": "url",
        "id": "social_twitter_url",
        "label": "Twitter URL"
      },
      {
        "type": "url",
        "id": "social_tiktok_url",
        "label": "TikTok URL"
      }
    ]
  },
  {
    "name": "Wishlist",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_wishlist",
        "label": "Enable wishlist functionality",
        "default": true
      },
      {
        "type": "page",
        "id": "wishlist_page",
        "label": "Wishlist page"
      }
    ]
  }
]
