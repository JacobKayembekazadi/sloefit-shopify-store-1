<section class="py-16 px-4">
  <div class="container mx-auto max-w-6xl">
    <div class="text-center mb-12">
      <p class="text-primary font-semibold mb-2">{{ section.settings.eyebrow }}</p>
      <h2 class="text-3xl md:text-4xl font-bold mb-4">{{ section.settings.heading }}</h2>
      <p class="text-muted-foreground text-lg max-w-2xl mx-auto">{{ section.settings.description }}</p>
    </div>
    
    <div class="grid md:grid-cols-2 gap-8">
      {% for block in section.blocks %}
        <div class="p-6 border border-border rounded-lg bg-card hover:border-primary transition-colors group">
          <h3 class="text-xl font-bold mb-3">{{ block.settings.title }}</h3>
          <p class="text-muted-foreground mb-4">{{ block.settings.description }}</p>
          {% if block.settings.link != blank %}
            <a href="{{ block.settings.link }}" class="text-primary font-semibold hover:underline inline-flex items-center gap-2">
              {{ block.settings.link_text }}
              <i data-lucide="arrow-right" class="h-4 w-4"></i>
            </a>
          {% else %}
            <span class="text-muted-foreground text-sm">Coming soon</span>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Learn Guides",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow Text",
      "default": "KNOWLEDGE BASE"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Training Guides"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Guides, protocols, and evidence-based info to help you train smarter."
    }
  ],
  "blocks": [
    {
      "type": "guide",
      "name": "Guide",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Guide Title",
          "default": "Guide Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Guide description"
        },
        {
          "type": "text",
          "id": "link_text",
          "label": "Link Text",
          "default": "Read Guide"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Guide Link",
          "info": "Link to blog post, article, or external resource"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Learn Guides",
      "blocks": [
        {
