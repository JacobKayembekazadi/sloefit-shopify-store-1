<section class="py-16 px-4">
  <div class="container mx-auto max-w-4xl">
    {% if section.settings.eyebrow != blank %}
      <p class="text-primary font-semibold mb-2 text-center">{{ section.settings.eyebrow }}</p>
    {% endif %}
    
    <h1 class="text-5xl md:text-6xl font-bold mb-8 text-center">{{ section.settings.heading }}</h1>
    
    <div class="prose prose-lg prose-invert max-w-none">
      {{ section.settings.content }}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Page Content",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow Text"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Page Heading",
      "default": "Page Title"
    },
    {
      "type": "html",
      "id": "content",
      "label": "Page Content",
      "default": "<p>Add your page content here.</p>"
    }
  ],
  "presets": [
    {
      "name": "Page Content"
    }
  ]
}
{% endschema %}

