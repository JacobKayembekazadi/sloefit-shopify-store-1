<section class="py-16 px-4">
  <div class="container mx-auto">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">{{ section.settings.heading }}</h2>
      <p class="text-muted-foreground max-w-2xl mx-auto">{{ section.settings.description }}</p>
    </div>

    <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
      {% for block in section.blocks %}
        <div class="p-6 rounded-lg border border-border bg-card">
          <div class="h-12 w-12 rounded-lg bg-primary/10 flex items-center justify-center mb-4">
            <i data-lucide="{{ block.settings.icon }}" class="h-6 w-6 text-primary"></i>
          </div>
          <h3 class="text-xl font-bold mb-3">{{ block.settings.title }}</h3>
          <p class="text-muted-foreground">{{ block.settings.description }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "App Features",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Everything You Need"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Built for serious lifters who want structure without complexity."
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "icon",
          "label": "Lucide Icon Name",
          "default": "dumbbell"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Training Plans"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Progressive programs designed by coaches, tracked rep-by-rep."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "App Features"
    }
  ]
}
{% endschema %}

