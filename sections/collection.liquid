<div class="py-12 px-4">
  <div class="container mx-auto">
    <h1 class="text-4xl font-bold mb-8 text-center">{{ collection.title }}</h1>
    {% if collection.description != blank %}
      <p class="text-muted-foreground text-center mb-12 max-w-2xl mx-auto">{{ collection.description }}</p>
    {% endif %}
    <div class="grid md:grid-cols-3 gap-8">
      {% for product in collection.products %}
        <a href="{{ product.url }}" class="group border border-border rounded-lg overflow-hidden bg-card hover:border-primary transition-colors">
          {% if product.featured_image %}
            {{ product.featured_image | image_url: width: 600 | image_tag: class: 'w-full aspect-square object-cover', loading: 'lazy' }}
          {% endif %}
          <div class="p-6">
            <h3 class="font-bold text-lg mb-2 group-hover:text-primary transition-colors">{{ product.title }}</h3>
            <p class="text-2xl font-bold">{{ product.price | money }}</p>
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Collection",
  "settings": []
}
{% endschema %}

