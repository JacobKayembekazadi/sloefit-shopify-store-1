<section class="py-20 px-4 bg-gradient-to-br from-primary/10 via-transparent to-secondary/10">
  <div class="container mx-auto max-w-4xl text-center">
    <p class="text-primary font-semibold mb-2">{{ section.settings.eyebrow }}</p>
    <h1 class="text-5xl md:text-6xl font-bold mb-6">{{ section.settings.heading }}</h1>
    <p class="text-xl text-muted-foreground mb-8">
      {{ section.settings.description }}
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      {% if section.settings.primary_button_text != blank %}
        <a href="{{ section.settings.primary_button_link }}" class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-11 px-8">
          {{ section.settings.primary_button_text }}
          <i data-lucide="download" class="ml-2 h-5 w-5"></i>
        </a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "App Hero",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow Text",
      "default": "SLOE FIT APP"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Your Training & Supplement System in One Place"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Track workouts, log habits, and manage your supplement stack. The Sloe Fit app syncs your training with your nutrition so you stay locked in without guesswork."
    },
    {
      "type": "text",
      "id": "primary_button_text",
      "label": "Button Text",
      "default": "Download App"
    },
    {
      "type": "url",
      "id": "primary_button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "App Hero"
    }
  ]
}
{% endschema %}

