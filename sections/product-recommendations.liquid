{%- comment -%}
  Shopify will automatically populate the recommendations object
  when this section is rendered on a product page
{%- endcomment -%}

{% if recommendations.performed and recommendations.products.size > 0 %}
  <section class="product-recommendations py-12 px-4 bg-card">
    <div class="container mx-auto max-w-7xl">
      <div class="text-center mb-8">
        <h2 class="text-3xl md:text-4xl font-bold mb-2">
          {{ section.settings.heading | default: 'You may also like' }}
        </h2>
        {% if section.settings.description != blank %}
          <p class="text-muted-foreground text-lg">{{ section.settings.description }}</p>
        {% endif %}
      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6">
        {% for recommendation in recommendations.products limit: section.settings.products_to_show %}
          <div class="group relative">
            <a href="{{ recommendation.url }}" class="block">
              <div class="aspect-square rounded-lg overflow-hidden bg-background border border-border group-hover:border-primary transition-colors mb-3 relative">
                {% if recommendation.featured_media %}
                  {{ recommendation.featured_media | image_url: width: 600 | image_tag: 
                    class: 'w-full h-full object-cover group-hover:scale-105 transition-transform duration-300', 
                    loading: 'lazy',
                    alt: recommendation.featured_media.alt | default: recommendation.title
                  }}
                {% else %}
                  <div class="w-full h-full flex items-center justify-center">
                    <span class="text-muted-foreground text-sm">{{ 'products.product.no_image' | t }}</span>
                  </div>
                {% endif %}
                {% if section.settings.show_quick_add %}
                  <div class="absolute bottom-2 right-2 opacity-0 group-hover:opacity-100 transition-opacity">
                    <button
                      type="button"
                      class="quick-add-button w-10 h-10 flex items-center justify-center bg-primary text-primary-foreground rounded-full shadow-lg hover:bg-primary/90 transition-colors"
                      data-product-id="{{ recommendation.id }}"
                      data-variant-id="{{ recommendation.selected_or_first_available_variant.id }}"
                      aria-label="Quick add {{ recommendation.title }} to cart"
                    >
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                      </svg>
                    </button>
                  </div>
                {% endif %}
              </div>
              <h3 class="font-semibold text-sm md:text-base mb-1 group-hover:text-primary transition-colors line-clamp-2">
                {{ recommendation.title }}
              </h3>
              <div class="flex items-baseline gap-2">
                <span class="text-lg font-bold">{{ recommendation.price | money }}</span>
                {% if recommendation.compare_at_price > recommendation.price %}
                  <span class="text-sm text-muted-foreground line-through">{{ recommendation.compare_at_price | money }}</span>
                {% endif %}
              </div>
            </a>
          </div>
        {% endfor %}
      </div>
      
      {% if section.settings.show_quick_add %}
        <script>
          (function() {
            const quickAddButtons = document.querySelectorAll('.quick-add-button');
            quickAddButtons.forEach(button => {
              button.addEventListener('click', async function(e) {
                e.preventDefault();
                e.stopPropagation();
                
                const productId = this.dataset.productId;
                const variantId = this.dataset.variantId;
                const button = this;
                
                // Disable button
                button.disabled = true;
                button.innerHTML = '<svg class="w-5 h-5 animate-spin" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>';
                
                try {
                  const response = await fetch(window.routes.cart_add_url, {
                    method: 'POST',
                    headers: {
                      'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                      items: [{
                        id: variantId,
                        quantity: 1
                      }]
                    })
                  });
                  
                  if (!response.ok) {
                    throw new Error('Failed to add to cart');
                  }
                  
                  const data = await response.json();
                  
                  // Update cart
                  if (window.CartDrawer) {
                    const cartDrawer = new window.CartDrawer();
                    await cartDrawer.loadCart();
                  }
                  
                  // Show success
                  button.innerHTML = '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>';
                  setTimeout(() => {
                    button.disabled = false;
                    button.innerHTML = '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>';
                  }, 1000);
                } catch (error) {
                  console.error('Error adding to cart:', error);
                  button.disabled = false;
                  button.innerHTML = '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>';
                  setTimeout(() => {
                    button.innerHTML = '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>';
                  }, 2000);
                }
              });
            });
          })();
        </script>
      {% endif %}
    </div>
  </section>
{% endif %}

{% schema %}
{
  "name": "Product Recommendations",
  "tag": "section",
  "class": "section-product-recommendations",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "You may also like"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Products to show",
      "min": 2,
      "max": 8,
      "step": 1,
      "default": 4
    },
    {
      "type": "checkbox",
      "id": "show_quick_add",
      "label": "Show quick add buttons",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Product Recommendations"
    }
  ]
}
{% endschema %}

{% comment %} Shopify will automatically populate recommendations {% endcomment %}

