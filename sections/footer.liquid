<footer class="border-t border-border bg-card mt-20">
  <div class="container mx-auto px-4 py-12">
    {% comment %} Brand Block {% endcomment %}
    <div class="mb-12">
      <div class="text-2xl font-bold mb-4">
        <span class="text-primary">SLOE</span>
        <span class="text-foreground"> FIT</span>
      </div>
      <p class="text-muted-foreground max-w-md">
        {{ section.settings.brand_description }}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-12">
      {% comment %} Shop {% endcomment %}
      <div>
        <h4 class="font-semibold mb-4">Shop</h4>
        <ul class="space-y-2 text-sm text-muted-foreground">
          <li><a href="/collections/all" class="hover:text-foreground transition-colors">Shop All</a></li>
          <li><a href="/pages/bundles" class="hover:text-foreground transition-colors">Bundles & Stacks</a></li>
          <li><a href="/pages/results" class="hover:text-foreground transition-colors">Results</a></li>
          <li><a href="/pages/quiz" class="hover:text-foreground transition-colors">Quiz</a></li>
        </ul>
      </div>

      {% comment %} Company {% endcomment %}
      <div>
        <h4 class="font-semibold mb-4">Company</h4>
        <ul class="space-y-2 text-sm text-muted-foreground">
          <li><a href="/pages/about" class="hover:text-foreground transition-colors">About</a></li>
          <li><a href="/pages/learn" class="hover:text-foreground transition-colors">Learn</a></li>
          <li><a href="/pages/affiliates" class="hover:text-foreground transition-colors">Affiliates</a></li>
          <li><a href="/pages/contact" class="hover:text-foreground transition-colors">Contact</a></li>
        </ul>
      </div>

      {% comment %} Support {% endcomment %}
      <div>
        <h4 class="font-semibold mb-4">Support</h4>
        <ul class="space-y-2 text-sm text-muted-foreground">
          <li><a href="/pages/faq" class="hover:text-foreground transition-colors">FAQ</a></li>
          <li><a href="/pages/shipping" class="hover:text-foreground transition-colors">Shipping & Returns</a></li>
          <li><a href="/policies/privacy-policy" class="hover:text-foreground transition-colors">Privacy Policy</a></li>
          <li><a href="/policies/terms-of-service" class="hover:text-foreground transition-colors">Terms of Service</a></li>
        </ul>
      </div>

      {% comment %} Connect {% endcomment %}
      <div>
        <h4 class="font-semibold mb-4">Connect</h4>
        <div class="flex space-x-4 mb-4">
          {% if settings.social_instagram_url != blank %}
            <a href="{{ settings.social_instagram_url }}" target="_blank" rel="noopener noreferrer" class="text-muted-foreground hover:text-primary transition-colors" aria-label="Instagram">
              <i data-lucide="instagram" class="h-5 w-5" aria-hidden="true"></i>
            </a>
          {% endif %}
          {% if settings.social_youtube_url != blank %}
            <a href="{{ settings.social_youtube_url }}" target="_blank" rel="noopener noreferrer" class="text-muted-foreground hover:text-primary transition-colors" aria-label="YouTube">
              <i data-lucide="youtube" class="h-5 w-5" aria-hidden="true"></i>
            </a>
          {% endif %}
          {% if settings.social_facebook_url != blank %}
            <a href="{{ settings.social_facebook_url }}" target="_blank" rel="noopener noreferrer" class="text-muted-foreground hover:text-primary transition-colors" aria-label="Facebook">
              <i data-lucide="facebook" class="h-5 w-5" aria-hidden="true"></i>
            </a>
          {% endif %}
          {% if settings.social_twitter_url != blank %}
            <a href="{{ settings.social_twitter_url }}" target="_blank" rel="noopener noreferrer" class="text-muted-foreground hover:text-primary transition-colors" aria-label="Twitter">
              <i data-lucide="twitter" class="h-5 w-5" aria-hidden="true"></i>
            </a>
          {% endif %}
          {% if settings.social_tiktok_url != blank %}
            <a href="{{ settings.social_tiktok_url }}" target="_blank" rel="noopener noreferrer" class="text-muted-foreground hover:text-primary transition-colors" aria-label="TikTok">
              <i data-lucide="music" class="h-5 w-5" aria-hidden="true"></i>
            </a>
          {% endif %}
        </div>
      </div>
    </div>

    {% comment %} Email Signup {% endcomment %}
    <div class="mb-12 max-w-md">
      <h4 class="font-semibold mb-2">Stay locked in with Sloe Fit</h4>
      <p class="text-sm text-muted-foreground mb-4">
        Get members-only offers, training systems, and early access to new formulas.
      </p>
      {% form 'customer', class: 'flex gap-2' %}
        <input type="hidden" name="contact[tags]" value="newsletter">
        <input 
          type="email" 
          name="contact[email]"
          placeholder="Your email" 
          class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50 flex-1"
          required
        />
        <button type="submit" class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-4 py-2">
          Join the List
        </button>
      {% endform %}
    </div>

    {% comment %} Bottom {% endcomment %}
    <div class="pt-8 border-t border-border text-center text-sm text-muted-foreground">
      <p>&copy; {{ 'now' | date: "%Y" }} {{ shop.name }}. All rights reserved.</p>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "text",
      "id": "brand_description",
      "label": "Brand Description",
      "default": "Sloe Fit is a modern performance system: clean supplements + intelligent training app."
    },
  ]
}
{% endschema %}

