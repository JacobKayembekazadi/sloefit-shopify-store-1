<div class="py-12 px-4">
  <div class="container mx-auto max-w-4xl">
    <h1 class="text-4xl font-bold mb-8 text-center">Search</h1>
    <form action="/search" method="get" class="mb-12">
      <input type="search" name="q" value="{{ search.terms }}" placeholder="Search products..." class="w-full px-4 py-3 border border-border rounded-lg bg-background text-foreground">
    </form>
    {% if search.performed %}
      <div class="grid md:grid-cols-3 gap-8">
        {% for item in search.results %}
          <a href="{{ item.url }}" class="border border-border rounded-lg p-4 bg-card hover:border-primary transition-colors">
            <h3 class="font-bold">{{ item.title }}</h3>
          </a>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Search",
  "settings": []
}
{% endschema %}

