<section class="py-16 px-4">
  <div class="container mx-auto">
    <div class="grid md:grid-cols-2 gap-12 items-center max-w-6xl mx-auto">
      <div>
        <p class="text-primary font-semibold mb-2">{{ section.settings.eyebrow }}</p>
        <h2 class="text-3xl md:text-4xl font-bold mb-6">{{ section.settings.heading }}</h2>
        <p class="text-muted-foreground text-lg mb-8">{{ section.settings.description }}</p>
        <a href="{{ section.settings.button_link }}" class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 border border-input bg-background hover:bg-accent hover:text-accent-foreground h-11 px-8">
          {{ section.settings.button_text }}
          <i data-lucide="arrow-right" class="ml-2 h-5 w-5"></i>
        </a>
      </div>
      <div class="grid grid-cols-2 gap-4">
        {% if section.settings.mockup_primary != blank %}
          {{ section.settings.mockup_primary | image_url: width: 800 | image_tag: class: 'w-full rounded-xl shadow-lg', loading: 'lazy' }}
        {% else %}
          <div class="aspect-[9/16] bg-muted rounded-xl flex items-center justify-center">Phone Mockup</div>
        {% endif %}
        {% if section.settings.mockup_secondary != blank %}
          {{ section.settings.mockup_secondary | image_url: width: 800 | image_tag: class: 'w-full rounded-xl shadow-lg mt-8', loading: 'lazy' }}
        {% else %}
          <div class="aspect-[9/16] bg-muted rounded-xl flex items-center justify-center mt-8">Screen</div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "App CTA",
  "settings": [
    { "type": "text", "id": "eyebrow", "label": "Eyebrow", "default": "SLOE FIT APP" },
    { "type": "text", "id": "heading", "label": "Heading", "default": "The Sloe Fit App" },
    { "type": "textarea", "id": "description", "label": "Description", "default": "Keep your training, supplements, and habits synced. Personalized plans, habit tracking, and stack reminders in one place." },
    { "type": "text", "id": "button_text", "label": "Button text", "default": "See How It Works" },
    { "type": "url", "id": "button_link", "label": "Button link" },
    { "type": "image_picker", "id": "mockup_primary", "label": "Primary phone mockup" },
    { "type": "image_picker", "id": "mockup_secondary", "label": "Secondary screen mockup" }
  ],
  "presets": [{ "name": "App CTA" }]
}
{% endschema %}


