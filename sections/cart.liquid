<div class="py-12 px-4">
  <div class="container mx-auto max-w-4xl">
    <h1 class="text-4xl font-bold mb-8">Cart</h1>
    {% if cart.item_count > 0 %}
      <form action="{{ routes.cart_url }}" method="post">
        <div class="space-y-4 mb-8">
          {% for item in cart.items %}
            <div class="flex gap-4 p-4 border border-border rounded-lg bg-card">
              {% if item.image %}
                {{ item.image | image_url: width: 200 | image_tag: class: 'w-24 h-24 object-cover rounded', loading: 'lazy' }}
              {% endif %}
              <div class="flex-1">
                <h3 class="font-bold">{{ item.product.title }}</h3>
                <p class="text-sm text-muted-foreground">{{ item.variant.title }}</p>
                <p class="font-bold mt-2">{{ item.final_price | money }}</p>
              </div>
              <div>
                <input type="number" name="updates[]" value="{{ item.quantity }}" min="0" class="w-20 px-2 py-1 border border-border rounded">
              </div>
            </div>
          {% endfor %}
        </div>
        <div class="text-right">
          <p class="text-2xl font-bold mb-4">Total: {{ cart.total_price | money }}</p>
          <button type="submit" name="checkout" class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-11 px-8">
            Checkout
          </button>
        </div>
      </form>
    {% else %}
      <p class="text-center text-muted-foreground py-12">Your cart is empty</p>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Cart",
  "settings": []
}
{% endschema %}

