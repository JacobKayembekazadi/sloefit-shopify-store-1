<section class="py-16 px-4">
  <div class="container mx-auto max-w-4xl">
    <h2 class="text-3xl font-bold mb-8 text-center">{{ section.settings.heading }}</h2>
    
    <div class="space-y-4">
      {% for block in section.blocks %}
        <div class="border border-border rounded-lg p-6 bg-card">
          <h3 class="font-bold text-lg mb-3">{{ block.settings.question }}</h3>
          <p class="text-muted-foreground">{{ block.settings.answer }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "FAQ List",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Frequently Asked Questions"
    }
  ],
  "blocks": [
    {
      "type": "faq",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "Question goes here?"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Answer",
          "default": "Answer goes here."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ List"
    }
  ]
}
{% endschema %}

