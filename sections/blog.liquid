<div class="py-12 px-4">
  <div class="container mx-auto">
    <h1 class="text-4xl font-bold mb-8 text-center">{{ blog.title }}</h1>
    <div class="grid md:grid-cols-3 gap-8">
      {% for article in blog.articles %}
        <a href="{{ article.url }}" class="group border border-border rounded-lg overflow-hidden bg-card hover:border-primary transition-colors">
          {% if article.image %}
            {{ article.image | image_url: width: 600 | image_tag: class: 'w-full aspect-video object-cover', loading: 'lazy' }}
          {% endif %}
          <div class="p-6">
            <h2 class="text-xl font-bold mb-2 group-hover:text-primary transition-colors">{{ article.title }}</h2>
            <p class="text-muted-foreground text-sm">{{ article.published_at | date: '%B %d, %Y' }}</p>
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Blog",
  "settings": []
}
{% endschema %}

