{% doc %}
  @prompt
    collection page
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-page-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px {{ block.settings.min_page_margin }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-collection-page__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_page_width }};
    margin: 0 auto;
  }

  .ai-collection-page__header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-collection-page__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 16px;
    font-weight: 600;
  }

  .ai-collection-page__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.text_color }};
    opacity: 0.8;
    margin: 0;
  }

  .ai-collection-page__filters-{{ ai_gen_id }} {
    display: flex;
    gap: 16px;
    margin-bottom: 32px;
    flex-wrap: wrap;
    align-items: center;
  }

  .ai-collection-page__sort-{{ ai_gen_id }} {
    margin-left: auto;
  }

  .ai-collection-page__sort-select-{{ ai_gen_id }} {
    padding: 10px 16px;
    border: 1px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.input_corner_radius }}px;
    background-color: {{ block.settings.background_color }};
    color: {{ block.settings.text_color }};
    font-size: 14px;
    cursor: pointer;
  }

  .ai-collection-page__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    margin-bottom: 48px;
  }

  .ai-collection-page__product-card-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    color: inherit;
    transition: transform 0.3s ease;
  }

  .ai-collection-page__product-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
  }

  .ai-collection-page__product-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
    background-color: #f4f4f4;
    margin-bottom: 12px;
  }

  .ai-collection-page__product-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-collection-page__product-image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-collection-page__product-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-collection-page__product-info-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .ai-collection-page__product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0;
    font-weight: 500;
  }

  .ai-collection-page__product-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_price_size }}px;
    color: {{ block.settings.text_color }};
    font-weight: 600;
  }

  .ai-collection-page__product-compare-price-{{ ai_gen_id }} {
    text-decoration: line-through;
    opacity: 0.6;
    margin-right: 8px;
  }

  .ai-collection-page__pagination-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 12px;
  }

  .ai-collection-page__pagination-link-{{ ai_gen_id }} {
    padding: 10px 16px;
    border: 1px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.input_corner_radius }}px;
    background-color: {{ block.settings.background_color }};
    color: {{ block.settings.text_color }};
    text-decoration: none;
    transition: background-color 0.3s ease;
  }

  .ai-collection-page__pagination-link-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
    color: {{ block.settings.button_text_color }};
  }

  .ai-collection-page__pagination-link-{{ ai_gen_id }}--active {
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    border-color: {{ block.settings.button_color }};
  }

  .ai-collection-page__empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 80px 20px;
  }

  .ai-collection-page__empty-state-title-{{ ai_gen_id }} {
    font-size: 24px;
    color: {{ block.settings.text_color }};
    margin: 0 0 12px;
  }

  .ai-collection-page__empty-state-text-{{ ai_gen_id }} {
    font-size: 16px;
    color: {{ block.settings.text_color }};
    opacity: 0.7;
  }

  @media screen and (max-width: 989px) {
    .ai-collection-page__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-collection-page__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }

    .ai-collection-page__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }

    .ai-collection-page__filters-{{ ai_gen_id }} {
      flex-direction: column;
      align-items: stretch;
    }

    .ai-collection-page__sort-{{ ai_gen_id }} {
      margin-left: 0;
    }
  }
{% endstyle %}

<div class="ai-collection-page-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-collection-page__container-{{ ai_gen_id }}">
    {% if block.settings.show_collection_header %}
      <div class="ai-collection-page__header-{{ ai_gen_id }}">
        {% if collection.title != blank %}
          <h1 class="ai-collection-page__title-{{ ai_gen_id }}">{{ collection.title }}</h1>
        {% endif %}
        {% if collection.description != blank %}
          <div class="ai-collection-page__description-{{ ai_gen_id }}">{{ collection.description }}</div>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.show_sorting %}
      <div class="ai-collection-page__filters-{{ ai_gen_id }}">
        <div class="ai-collection-page__sort-{{ ai_gen_id }}">
          <select class="ai-collection-page__sort-select-{{ ai_gen_id }}" onchange="window.location.href=this.value">
            <option value="{{ collection.url }}?sort_by=manual" {% if collection.sort_by == 'manual' %}selected{% endif %}>Featured</option>
            <option value="{{ collection.url }}?sort_by=best-selling" {% if collection.sort_by == 'best-selling' %}selected{% endif %}>Best selling</option>
            <option value="{{ collection.url }}?sort_by=title-ascending" {% if collection.sort_by == 'title-ascending' %}selected{% endif %}>Alphabetically, A-Z</option>
            <option value="{{ collection.url }}?sort_by=title-descending" {% if collection.sort_by == 'title-descending' %}selected{% endif %}>Alphabetically, Z-A</option>
            <option value="{{ collection.url }}?sort_by=price-ascending" {% if collection.sort_by == 'price-ascending' %}selected{% endif %}>Price, low to high</option>
            <option value="{{ collection.url }}?sort_by=price-descending" {% if collection.sort_by == 'price-descending' %}selected{% endif %}>Price, high to low</option>
            <option value="{{ collection.url }}?sort_by=created-ascending" {% if collection.sort_by == 'created-ascending' %}selected{% endif %}>Date, old to new</option>
            <option value="{{ collection.url }}?sort_by=created-descending" {% if collection.sort_by == 'created-descending' %}selected{% endif %}>Date, new to old</option>
          </select>
        </div>
      </div>
    {% endif %}

    {% if collection.products.size > 0 %}
      <div class="ai-collection-page__grid-{{ ai_gen_id }}">
        {% for product in collection.products %}
          <a href="{{ product.url }}" class="ai-collection-page__product-card-{{ ai_gen_id }}">
            <div class="ai-collection-page__product-image-wrapper-{{ ai_gen_id }}">
              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 600 }}"
                  alt="{{ product.featured_image.alt | escape }}"
                  class="ai-collection-page__product-image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="600"
                  height="600"
                >
              {% else %}
                <div class="ai-collection-page__product-image-placeholder-{{ ai_gen_id }}">
                  {{ 'product-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>
            <div class="ai-collection-page__product-info-{{ ai_gen_id }}">
              <h3 class="ai-collection-page__product-title-{{ ai_gen_id }}">{{ product.title }}</h3>
              <div class="ai-collection-page__product-price-{{ ai_gen_id }}">
                {% if product.compare_at_price > product.price %}
                  <span class="ai-collection-page__product-compare-price-{{ ai_gen_id }}">{{ product.compare_at_price | money }}</span>
                {% endif %}
                <span>{{ product.price | money }}</span>
              </div>
            </div>
          </a>
        {% endfor %}
      </div>

      {% if paginate.pages > 1 %}
        <div class="ai-collection-page__pagination-{{ ai_gen_id }}">
          {% if paginate.previous %}
            <a href="{{ paginate.previous.url }}" class="ai-collection-page__pagination-link-{{ ai_gen_id }}">Previous</a>
          {% endif %}

          {% for part in paginate.parts %}
            {% if part.is_link %}
              <a href="{{ part.url }}" class="ai-collection-page__pagination-link-{{ ai_gen_id }}">{{ part.title }}</a>
            {% else %}
              {% if part.title == paginate.current_page %}
                <span class="ai-collection-page__pagination-link-{{ ai_gen_id }} ai-collection-page__pagination-link-{{ ai_gen_id }}--active">{{ part.title }}</span>
              {% else %}
                <span class="ai-collection-page__pagination-link-{{ ai_gen_id }}">{{ part.title }}</span>
              {% endif %}
            {% endif %}
          {% endfor %}

          {% if paginate.next %}
            <a href="{{ paginate.next.url }}" class="ai-collection-page__pagination-link-{{ ai_gen_id }}">Next</a>
          {% endif %}
        </div>
      {% endif %}
    {% else %}
      <div class="ai-collection-page__empty-state-{{ ai_gen_id }}">
        <h2 class="ai-collection-page__empty-state-title-{{ ai_gen_id }}">No products found</h2>
        <p class="ai-collection-page__empty-state-text-{{ ai_gen_id }}">This collection is empty. Check back soon for new products.</p>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Collection page",
  "settings": [
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "text",
      "id": "max_page_width",
      "label": "Maximum page width",
      "default": "1200px"
    },
    {
      "type": "range",
      "id": "min_page_margin",
      "min": 10,
      "max": 100,
      "step": 5,
